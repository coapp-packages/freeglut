#product-info  {
    product-name: "freeglut";
    version: "2.6.0";
    original-source-location: "http://freeglut.sourceforge.net/index.php#download";
    original-source-website: "http://freeglut.sourceforge.net/";
    license: "See COPYING file";
    packager: "Petter Strandmark";
}


x64  {
    compiler: vc10-x64 ;
 
    targets: { 
				//Libraries
				"VisualStudio2010\Release\freeglut.lib",
				"VisualStudio2010Static\Release\freeglut_static.lib",
				
				//DLL
				"VisualStudio2010\Release\freeglut.dll",
			} ;
 
    build-command: @"
			msbuild /p:Platform=x64 /p:Configuration=Release VisualStudio2010\freeglut.sln
			msbuild /p:Platform=x64 /p:Configuration=Release VisualStudio2010Static\freeglut.sln
			";

    clean-command: @"
			 rmdir /S /Q VisualStudio2010\Release 2>NUL
			 rmdir /S /Q VisualStudio2010Static\Release  2>NUL
			 set ERRORLEVEL=0 
			";
}
